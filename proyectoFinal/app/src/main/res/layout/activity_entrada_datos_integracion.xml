<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.numericos.proyectofinal.views.numerical_integration.Entrada_datos_integracion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X0"
        android:id="@+id/textView27"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_above="@+id/x1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/x0"
        android:layout_alignBottom="@+id/textView27"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X1"
        android:id="@+id/textView28"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/fun"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/x1"
        android:layout_alignBottom="@+id/textView28"
        android:layout_alignLeft="@+id/x0"
        android:layout_alignStart="@+id/x0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Function"
        android:id="@+id/textView29"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView28"
        android:layout_alignStart="@+id/textView28" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/fun"
        android:layout_alignBottom="@+id/textView29"
        android:layout_alignLeft="@+id/x1"
        android:layout_alignStart="@+id/x1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intervals"
        android:id="@+id/textView30"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/textView29"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/intervalos"
        android:layout_alignBottom="@+id/textView30"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/continuar"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView30"
        android:layout_toEndOf="@+id/textView30"
        android:layout_marginBottom="53dp"
        android:onClick="continuar"/>
</RelativeLayout>
