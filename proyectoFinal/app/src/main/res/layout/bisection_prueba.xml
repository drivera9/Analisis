<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.numericos.proyectofinal.views.single_variable.BisectionPrueba"
    android:id="@+id/bisection_method">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute"
        android:id="@+id/Bisection_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/Resultado_bisection"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabla"
        android:id="@+id/tabla_button"
        android:layout_alignTop="@+id/Resultado_bisection"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/x0_editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/x1"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/x0_editText"
        android:layout_alignLeft="@+id/x0_editText"
        android:layout_alignStart="@+id/x0_editText" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/iteraciones"
        android:layout_below="@+id/x1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/tolerancia"
        android:layout_below="@+id/iteraciones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/funcion"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tolerancia"
        android:layout_alignStart="@+id/tolerancia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xi"
        android:id="@+id/textView16"
        android:layout_alignBottom="@+id/x0_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xs"
        android:id="@+id/textView17"
        android:layout_alignBottom="@+id/x1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iteraciones"
        android:id="@+id/textView18"
        android:layout_alignBottom="@+id/iteraciones"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tolerancia"
        android:id="@+id/textView19"
        android:layout_alignBottom="@+id/tolerancia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="funcion"
        android:id="@+id/textView20"
        android:layout_alignBottom="@+id/funcion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
